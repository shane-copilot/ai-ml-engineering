      "class SmartBackup:",
      "    def __init__(self, source_dir, backup_dir):",
      "        self.source = Path(source_dir).resolve()",
      "        self.backup = Path(backup_dir).resolve()",
      "        self.state_file = self.backup / '.backup_state.json'",
      "        ",
      "        # Load previous state",
      "        self.state = self.load_state()",
