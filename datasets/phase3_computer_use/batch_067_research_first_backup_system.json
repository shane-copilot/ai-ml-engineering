      "    ",
      "    def restore(self, version=None, target_dir=None):",
      "        \"\"\"Restore from backup\"\"\"",
      "        if version is None:",
      "            restore_from = self.backup / 'latest'",
      "            print('Restoring from latest backup...')",
      "        else:",
